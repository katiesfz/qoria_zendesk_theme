<section class="section hero hero-category">
  <div class="container">
    <div class="row">
      <div class="">
        {{breadcrumbs}}
      </div>
    </div>
    <div class="row">
      <div>
        <h1 title="{{category.name}}" class="category-title h1">{{category.name}}</h1>
        {{#if category.description}}
          <p class="page-header-description">{{category.description}}</p>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{search scoped=settings.scoped_kb_search submit=false class="search search-full search-transparent"}}
      </div>
    </div>
  </div>
</section>

<div id="main-content">
  <!-- subcategories -->
  <section class="section">
    {{#each sections}}
      {{#if sections }}
        <div class="container knowledge-base subcategories">
          <h2><a href="{{url}}">{{name}}</a></h2>
          {{#if sections}}
            <div class="categories-list row row-cols-md-3">
                {{#each sections}}
                  <div class="single-category">
                    <div class="category-thumbnail bg-subtle">
                      <div class="category-icon">
                        <img src="{{../../settings.promoted_icon}}">
                      </div>
                      <div class="category-copy">
                        <a href="{{url}}" class="category-link">
                          <span class="category-title">{{name}}</span>
                          <span class="category-description">{{excerpt description}}</span>
                        </a>
                      </div>
                    </div>
                  </div>
                {{/each}}
                {{#if more_sections}}
                  <a href="{{url}}" class="see-all-articles">
                    Show all subcategories
                  </a>
                {{/if}}
              </div>
          {{/if}}

          {{#if articles}}
            <div class="categories-list row row-cols-md-3">
              {{#each articles}}
                <div class="single-category {{#if promoted}} article-promoted{{/if}}">
                  <div class="category-thumbnail bg-subtle">
                    <div class="category-icon">
                      <img src="{{../../settings.category_icon}}">
                    </div>
                    <div class="category-copy">
                      <a href="{{url}}" class="category-link">
                        <span class="category-title{{#if internal}} category-title-internal{{/if}}">{{title}}</span>
                        {{#if internal}}
                          <i class="fa far fa-lock-alt internal-article-icon" title="{{t 'internal'}}"></i>
                        {{/if}}
                        <span class="category-description">{{excerpt snippet}}</span>
                      </a>
                    </div>
                  </div>
                </div>
              {{/each}}
              {{#if more_articles}}
                <a href="{{url}}" class="see-all-articles">
                  {{t 'show_all_articles' count=article_count}}
                </a>
              {{/if}}
            </div>
          {{/if}}
            
        </div>
      {{else}}
          {{#if articles}}
            <div class="container knowledge-base subcategories">
              <h2><a href="{{url}}">{{name}}</a></h2>
              {{#if sections}}
                <div class="categories-list row row-cols-md-3">
                    {{#each sections}}
                      <div class="single-category">
                        <div class="category-thumbnail bg-subtle">
                          <div class="category-icon">
                            <img src="{{../../settings.promoted_icon}}">
                          </div>
                          <div class="category-copy">
                            <a href="{{url}}" class="category-link">
                              <span class="category-title">{{name}}</span>
                              <span class="category-description">{{excerpt description}}</span>
                            </a>
                          </div>
                        </div>
                      </div>
                    {{/each}}
                    {{#if more_sections}}
                      <a href="{{url}}" class="see-all-articles">
                        Show all subcategories
                      </a>
                    {{/if}}
                  </div>
              {{/if}}

              {{#if articles}}
                <div class="categories-list row row-cols-md-3">
                  {{#each articles}}
                    <div class="single-category {{#if promoted}} article-promoted{{/if}}">
                      <div class="category-thumbnail bg-subtle">
                        <div class="category-icon">
                          <img src="{{../../settings.category_icon}}">
                        </div>
                        <div class="category-copy">
                          <a href="{{url}}" class="category-link">
                            <span class="category-title{{#if internal}} category-title-internal{{/if}}">{{title}}</span>
                            {{#if internal}}
                              <i class="fa far fa-lock-alt internal-article-icon" title="{{t 'internal'}}"></i>
                            {{/if}}
                            <span class="category-description">{{excerpt snippet}}</span>
                          </a>
                        </div>
                      </div>
                    </div>
                  {{/each}}
                  {{#if more_articles}}
                    <a href="{{url}}" class="see-all-articles">
                      {{t 'show_all_articles' count=article_count}}
                    </a>
                  {{/if}}
                </div>
              {{/if}}
                
            </div>
          {{/if}}
      {{/if}}
    {{else}}
    {{/each}}
  </section>
</div>